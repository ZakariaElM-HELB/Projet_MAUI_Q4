<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.View.UserListView"
             x:Name="Page"
             Title="Utilisateurs">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6600" Offset="0.0" />
            <GradientStop Color="#FFA726" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Utilisateurs enregistrés"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

            <CollectionView ItemsSource="{Binding Users}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#E0E0E0"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 16"
                                Padding="15"
                                Margin="0,5">
                            <VerticalStackLayout Spacing="6">

                                <Label Text="{Binding Username}" FontSize="18" FontAttributes="Bold" TextColor="#333" />
                                <Label Text="{Binding Email}" FontSize="16" TextColor="#666" />

                                <HorizontalStackLayout>
                                    <Label Text="Rôle : " FontSize="14" FontAttributes="Bold" TextColor="#666" />
                                    <Label Text="{Binding Role}" FontSize="14" TextColor="#888" />
                                </HorizontalStackLayout>

                                <Label Text="{Binding CreatedAt, StringFormat='Inscrit le {0:dd/MM/yyyy HH:mm}'}"
                                        FontSize="13" TextColor="#999" />

                                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">

                                    <Button Text="✏️ Modifier"
                                            BackgroundColor="#6A5ACD"
                                            TextColor="White"
                                            FontSize="14"
                                            CornerRadius="10"
                                            Command="{Binding Source={x:Reference Page}, Path=BindingContext.EditUserCommand}"
                                            CommandParameter="{Binding .}"
                                            WidthRequest="100" />       

                                    <Button Text="🗑 Supprimer"
                                            BackgroundColor="#D32F2F"
                                            TextColor="White"
                                            FontSize="14"
                                            CornerRadius="10"
                                            Command="{Binding Source={x:Reference Page}, Path=BindingContext.DeleteUserCommand}"
                                            CommandParameter="{Binding Id}"
                                            WidthRequest="100"
                                            IsEnabled="{Binding CanBeDeleted}" />
                                </HorizontalStackLayout>

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
